
<div class='wrapper'>
<h1>Posts-All</h1>

  <div id='left-side'>
    <% @posts.each do |post| %>
      <article>
        <figure>
          <%= link_to (image_tag post.image.url(:medium)), post_path(post) %>
        </figure>
        <h1><%= post.title %></h1>
        <p>post.id:<%= post.id %>body message</p>
      </article>
    <% end %>
  </div>

  <div id="right_side">
    <aside class='post-menue'>
      <h2>メニュー一覧</h2>
				<ul>
					<li><%=link_to '新規追加', new_post_path%></li>
				</ul>
    </aside>
  </div>

</div>
